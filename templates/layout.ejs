    <script>
        
        const cartCreationTime = localStorage.getItem("cartCreationTime");
        
        if (cartCreationTime) {
            const now = Date.now();
            const elapsed = now - cartCreationTime;
            const expirationTime = 30 * 60 * 1000; // 30 minutes in ms
            const warningTime = 25 * 60 * 1000; // 5 minutes before expiration

            if (elapsed < expirationTime) {
                const timeUntilWarning = warningTime - elapsed;
                setTimeout(() => {
                    alert("Your cart will expire in 5 minutes!");
                }, timeUntilWarning);
            }
        }

        window.addEventListener('load', function() {
            const cartCreationTime = Date.now();
            localStorage.setItem("cartCreationTime", cartCreationTime);
        });
    </script>

